@model List<RelatorioProgressoViewModel>

@{
    ViewData["Title"] = "Relatório de Progresso dos Usuários";
}

<div class="container-fluid px-3 px-md-4 py-3">
    <h2 class="h3 h4-md mb-3 mb-md-4">Relatório de Progresso dos Usuários</h2>

    <div class="mb-3 mb-md-4">
        <form asp-action="ProgressoUsuarios" method="get" class="row g-3">
            <div class="col-12 col-sm-8 col-md-6 col-lg-4">
                <label class="form-label fw-semibold">Filtrar por Curso:</label>
                <select name="cursoId" class="form-select" onchange="this.form.submit()">
                    <option value="">Todos os cursos</option>
                    @foreach (var curso in ViewBag.Cursos as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)
                    {
                        <option value="@curso.Value" selected="@(curso.Value == ViewBag.CursoSelecionado?.ToString())">
                            @curso.Text
                        </option>
                    }
                </select>
            </div>
        </form>
    </div>

    @if (Model != null && Model.Any())
    {
        <!-- Versão Desktop/Tablet: Tabela -->
        <div class="table-responsive d-none d-md-block">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Progresso</th>
                        <th>Curso</th>
                        <th>Aluno</th>
                        <th class="d-none d-lg-table-cell">Email</th>
                        <th class="text-center">Aulas Ativas</th>
                        <th class="text-center">Aulas Concluídas</th>
                        <th class="d-none d-xl-table-cell">Data Matrícula</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="min-width: 120px;">
                                <div class="progress" style="height: 25px;">
                                    <div class="progress-bar @(item.PercentualConclusao == 100 ? "bg-success" : item.PercentualConclusao >= 50 ? "bg-info" : "bg-warning")" 
                                         role="progressbar" 
                                         style="width: @item.PercentualConclusao%"
                                         aria-valuenow="@item.PercentualConclusao" 
                                         aria-valuemin="0" 
                                         aria-valuemax="100">
                                        @item.PercentualConclusao%
                                    </div>
                                </div>
                            </td>
                            <td>@item.CursoTitulo</td>
                            <td>@item.UsuarioNome</td>
                            <td class="d-none d-lg-table-cell">@item.UsuarioEmail</td>
                            <td class="text-center">@item.TotalAulasAtivas</td>
                            <td class="text-center">@item.AulasConcluidas</td>
                            <td class="d-none d-xl-table-cell">@item.DataMatricula.ToString("dd/MM/yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Versão Mobile: Cards -->
        <div class="d-md-none">
            @foreach (var item in Model)
            {
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-2">@item.UsuarioNome</h5>
                        <p class="card-text text-muted small mb-2">
                            <i class="bi bi-envelope"></i> @item.UsuarioEmail
                        </p>
                        <p class="card-text mb-3">
                            <strong>Curso:</strong> @item.CursoTitulo
                        </p>
                        
                        <div class="mb-3">
                            <label class="form-label small fw-semibold mb-1">Progresso</label>
                            <div class="progress" style="height: 30px;">
                                <div class="progress-bar @(item.PercentualConclusao == 100 ? "bg-success" : item.PercentualConclusao >= 50 ? "bg-info" : "bg-warning")" 
                                     role="progressbar" 
                                     style="width: @item.PercentualConclusao%"
                                     aria-valuenow="@item.PercentualConclusao" 
                                     aria-valuemin="0" 
                                     aria-valuemax="100">
                                    @item.PercentualConclusao%
                                </div>
                            </div>
                        </div>

                        <div class="row g-2 text-center">
                            <div class="col-6">
                                <div class="border rounded p-2">
                                    <div class="fw-bold text-primary">@item.TotalAulasAtivas</div>
                                    <div class="small text-muted">Aulas Ativas</div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="border rounded p-2">
                                    <div class="fw-bold text-success">@item.AulasConcluidas</div>
                                    <div class="small text-muted">Concluídas</div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-3 pt-2 border-top">
                            <small class="text-muted">
                                <i class="bi bi-calendar"></i> Matrícula: @item.DataMatricula.ToString("dd/MM/yyyy")
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Nenhum dado encontrado para exibir.
        </div>
    }

    <div class="mt-3 mt-md-4">
        <a asp-action="Index" class="btn btn-secondary w-100 w-md-auto">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>
</div>