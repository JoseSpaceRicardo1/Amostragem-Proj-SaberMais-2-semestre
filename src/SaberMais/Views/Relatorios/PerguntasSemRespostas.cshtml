@model List<RelatorioPerguntasSemRespostaViewModel>

@{
    ViewData["Title"] = "Perguntas sem Respostas";
}

<div class="container-fluid px-3 px-md-4 py-3">
    <h2 class="h3 h4-md mb-3 mb-md-4">Perguntas sem Respostas</h2>

    <div class="mb-3 mb-md-4">
        <form asp-action="PerguntasSemRespostas" method="get" class="row g-3">
            <div class="col-12 col-sm-8 col-md-6 col-lg-4">
                <label class="form-label fw-semibold">Filtrar por Curso:</label>
                <select name="cursoId" class="form-select" onchange="this.form.submit()">
                    <option value="">Todos os cursos</option>
                    @foreach (var curso in ViewBag.Cursos as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)
                    {
                        <option value="@curso.Value" selected="@(curso.Value == ViewBag.CursoSelecionado?.ToString())">
                            @curso.Text
                        </option>
                    }
                </select>
            </div>
        </form>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="alert alert-warning mb-3 mb-md-4">
            <i class="bi bi-exclamation-triangle"></i> 
            Total de perguntas sem resposta: <strong>@Model.Count</strong>
        </div>

        <!-- Versão Desktop/Tablet: Tabela -->
        <div class="table-responsive d-none d-md-block">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th class="text-center" style="width: 120px;">Ações</th>
                        <th>Curso</th>
                        <th>Aula</th>
                        <th>Aluno</th>
                        <th class="d-none d-lg-table-cell">Email</th>
                        <th class="d-none d-xl-table-cell">Data</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center" style="white-space: nowrap;">
                                <a asp-controller="Aulas" 
                                   asp-action="Details" 
                                   asp-route-id="@item.AulaId" 
                                   class="btn btn-sm btn-primary"
                                   title="Ver pergunta na aula">
                                    <i class="bi bi-eye"></i> Ver na Aula
                                </a>
                            </td>
                            <td><strong>@item.CursoTitulo</strong></td>
                            <td>@item.AulaTitulo</td>
                            <td>@item.UsuarioNome</td>
                            <td class="d-none d-lg-table-cell">@item.UsuarioEmail</td>
                            <td class="d-none d-xl-table-cell">@item.DataPergunta.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Versão Mobile: Cards -->
        <div class="d-md-none">
            @foreach (var item in Model)
            {
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div class="flex-grow-1">
                                <h5 class="card-title mb-1">@item.UsuarioNome</h5>
                                <p class="card-text text-muted small mb-0">
                                    <i class="bi bi-envelope"></i> @item.UsuarioEmail
                                </p>
                            </div>
                            <small class="text-muted text-end">
                                <i class="bi bi-calendar"></i><br>
                                @item.DataPergunta.ToString("dd/MM/yyyy")<br>
                                <span class="small">@item.DataPergunta.ToString("HH:mm")</span>
                            </small>
                        </div>

                        <div class="mb-3">
                            <div class="mb-1">
                                <strong class="text-primary">Curso:</strong>
                                <div>@item.CursoTitulo</div>
                            </div>
                            <div>
                                <strong class="text-primary">Aula:</strong>
                                <div>@item.AulaTitulo</div>
                            </div>
                        </div>

                        <div class="d-grid">
                            <a asp-controller="Aulas" 
                               asp-action="Details" 
                               asp-route-id="@item.AulaId" 
                               class="btn btn-primary btn-sm">
                                <i class="bi bi-eye"></i> Ver na Aula
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-success">
            <i class="bi bi-check-circle"></i> 
            Parabéns! Não há perguntas sem resposta no momento.
        </div>
    }

    <div class="mt-3 mt-md-4">
        <a asp-action="Index" class="btn btn-secondary w-100 w-md-auto">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>
</div>