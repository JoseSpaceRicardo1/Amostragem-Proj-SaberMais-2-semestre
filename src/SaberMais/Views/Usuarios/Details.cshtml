@using System.Security.Claims
@model SaberMais.Models.Usuario

@{
    ViewData["Title"] = "Detalhes do Perfil";
    var loggedInUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<div class="row justify-content-center">
    <div class="col-md-8">

        <div class="text-center">
            <h1>Informações do Usuário</h1>
        </div>

        <hr />

        <dl class="row">
            <dt class="col-sm-3 text-md-end">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt class="col-sm-3 text-md-end">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt class="col-sm-3 text-md-end">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd class="col-12">
                <p class="text-muted bg-light p-3 rounded" style="white-space: pre-wrap;">
                    @Html.DisplayFor(model => model.Descricao)
                </p>
            </dd>
            <dt class="col-sm-3 text-md-end">
                @Html.DisplayNameFor(model => model.Tipo)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Tipo)
            </dd>
        </dl>

        <hr />

        <div class="text-center">
            @if (Model != null && Model.Id.ToString() == loggedInUserId)
            {
                <div class="d-flex flex-wrap gap-2 justify-content-center">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary flex-grow-1 flex-sm-grow-0">Editar Informações</a>
                    <a asp-action="AlterarSenha" asp-route-id="@Model?.Id" class="btn btn-success flex-grow-1 flex-sm-grow-0">Mudar Senha</a>
                    <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger flex-grow-1 flex-sm-grow-0">Deletar Conta</a>
                    <a asp-controller="Cursos" asp-action="Index" class="btn btn-secondary flex-grow-1 flex-sm-grow-0">Voltar</a>
                </div>
            }
            else if (Model != null && !(Model.Id.ToString() == loggedInUserId))
            {
                <a href="#" onclick="history.back(); return false;" class="btn btn-secondary w-100">Voltar</a>
            }
        </div>

        <hr />

        <div class="text-center">
            @if (Model != null && Model.Id.ToString() == loggedInUserId)
            {
                <a asp-controller="Usuarios" asp-action="Logout" class="btn btn-danger w-100">Sair da Minha Conta</a>
            }
        </div>

    </div>
</div>