@model SaberMais.Models.RedefinirSenhaViewModel

@{
    Layout = null;
    ViewData["Title"] = "Redefinir Senha";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    </head>
<body class="d-flex flex-column min-vh-100">

    <div class="d-flex align-items-center justify-content-center flex-grow-1">
        <div class="card shadow-sm" style="width: 25rem;">
            <div class="card-header text-center bg-white border-0 pt-4">
                <h4 class="fw-bold">Crie sua Nova Senha</h4>
            </div>
            <div class="card-body p-4">
                
                <p class="text-center text-muted small mb-3">
                    Escolha uma nova senha forte.
                </p>

                <form asp-action="RedefinirSenha">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <input asp-for="Email" type="hidden" />
                    <input asp-for="Token" type="hidden" />

                    <div class="mb-3">
                        <label asp-for="NovaSenha" class="form-label"></label>
                        <input asp-for="NovaSenha" class="form-control" autocomplete="new-password" />
                        <span asp-validation-for="NovaSenha" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="ConfirmarNovaSenha" class="form-label"></label>
                        <input asp-for="ConfirmarNovaSenha" class="form-control" autocomplete="new-password" />
                        <span asp-validation-for="ConfirmarNovaSenha" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mb-3">
                         <input type="submit" value="Salvar Nova Senha" class="btn btn-primary" />
                         <a class="btn btn-secondary" asp-action="Login">Voltar para o Login</a>
                    </div>
                </form>

            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted bg-white">
        <div class="container text-center py-3">
            &copy; @DateTime.Now.Year - Saber+ - Privacy
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

</body>
</html>
