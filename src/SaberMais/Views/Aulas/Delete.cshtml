@model SaberMais.Models.Aula

@{
    ViewData["Title"] = "Confirmar Exclusão";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-8">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h1 class="h3 mb-0">Confirmar Exclusão</h1>
                </div>
                <div class="card-body">
                    <h3 class="text-danger">Tem certeza que deseja deletar esta aula?</h3>
                    <p>Esta ação não pode ser revertida.</p>
                    
                    <hr/>
                    
                    <h4>@Html.DisplayFor(model => model.Titulo)</h4>
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Descricao)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Descricao)</dd>
                        
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Curso)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Curso.Titulo)</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Deletar Permanentemente" class="btn btn-danger" />
                    </form>
                </div>
                <div class="card-footer">
                    <a asp-action="Index" asp-route-cursoId="@Model.CursoId" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar e Voltar para a Lista
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}