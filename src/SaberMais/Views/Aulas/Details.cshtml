@model SaberMais.Models.Aula

@{
    ViewData["Title"] = "Detalhes da Aula";
    bool isCreator = (ViewData["IsCreator"] as bool?) ?? false;
    
    var prevId = ViewData["PreviousAulaId"] as int?;
    var nextId = ViewData["NextAulaId"] as int?;
    
    var menuAulas = ViewData["MenuAulas"] as List<SaberMais.Models.Aula>;
}

<div class="container mt-4">
    <div class="row">

        <div class="col-lg-9 col-md-8">
            
            <div class="card shadow-lg border-primary">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h1 class="h3 mb-0">@Html.DisplayFor(model => model.Titulo)</h1>

                    <div class="btn-group" role="group">
                        @if (prevId != null)
                        {
                            <a asp-action="Details" asp-route-id="@prevId" class="btn btn-outline-light">
                                <i class="bi bi-chevron-left"></i> Anterior
                            </a>
                        }
                        @if (nextId != null)
                        {
                            <a asp-action="Details" asp-route-id="@nextId" class="btn btn-outline-light">
                                Próxima <i class="bi bi-chevron-right"></i>
                            </a>
                        }
                    </div>
                </div>

                
                                        
                    @if((bool)ViewData["IsCreator"] == false)
                    {
                        <div class="card-header bg-primary text-white d-flex justify-content-center align-items-center">
                            
                            @if((bool)ViewData["FoiConcluida"] == true)
                            {
                                <button type="button" class="btn btn-secondary" disabled>
                                    Aula Concluída
                                </button>
                            }
                            else
                            {
                                
                                <form asp-controller="AulasConcluidas" asp-action="MarcarComoConcluida" method="post" style="display: inline;">
                                    
                                    @Html.AntiForgeryToken()

                                    <input type="hidden" name="aulaId" value="@Model.Id" />

                                    <button type="submit" class="btn btn-success">
                                        Concluir Aula
                                    </button>
                                </form>
                            }
                        </div>
                    }
                    
                
                <div class="card-body">
                    <h5 class="card-subtitle mb-3 text-muted">
                        <i class="bi bi-collection-play"></i> 
                        Do curso: <a asp-controller="Cursos" asp-action="Details" asp-route-id="@Model.Curso.Id">@Model.Curso.Titulo</a>
                    </h5>
                    <hr />

                    @if (!string.IsNullOrEmpty(Model.CaminhoArquivo))
                    {
                        <div class="p-3 mb-4 bg-light rounded border">
                            @if (Model.TipoArquivo != null && Model.TipoArquivo.StartsWith("video/"))
                            {
                                <video controls style="width: 100%; max-height: 480px;" preload="metadata">
                                    <source src="@Url.Content(Model.CaminhoArquivo)" type="@Model.TipoArquivo">
                                    Seu navegador não suporta a tag de vídeo.
                                </video>
                            }
                            else if (Model.TipoArquivo != null && Model.TipoArquivo.StartsWith("image/"))
                            {
                                <img src="@Url.Content(Model.CaminhoArquivo)" alt="@Model.NomeArquivo" class="img-fluid rounded" />
                            }
                            else
                            {
                                <p>
                                    <i class="bi bi-file-earmark-arrow-down"></i>
                                    <a href="@Url.Content(Model.CaminhoArquivo)" download="@Model.NomeArquivo">
                                        Baixar Arquivo: @Model.NomeArquivo
                                    </a>
                                </p>
                            }
                        </div>
                    }

                    <h4 class="card-title text-primary mb-3 mt-4">Descrição Completa</h4>
                    <div class="p-3 mb-4 bg-light rounded border">
                        <p class="card-text text-break" style="white-space: pre-wrap;">
                            @Html.DisplayFor(model => model.Descricao)
                        </p>
                    </div>

                    <h4 class="card-title text-secondary mb-3 mt-4">Detalhes da Aula</h4>
                    <dl class="row mb-0">
                        <dt class="col-sm-3">
                            <i class="bi bi-clock"></i> Duração
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Duracao) minuto(s)
                        </dd>
                        @if (isCreator)
                        {
                        <dt class="col-sm-3">
                            <i class="bi bi-info-circle"></i> @Html.DisplayNameFor(model => model.Status)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Status)
                        </dd>
                        }
                    </dl>
                </div>

                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Index" asp-route-cursoId="@Model.CursoId" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar para Lista
                    </a>
                    @if (isCreator)
                    {
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Editar Aula
                        </a>
                    }
                </div>
            </div>
            <div class="card shadow mt-4">
                <div class="card-header">
                    <h4 class="mb-0"><i class="far fa-comments me-2"></i>Perguntas e Respostas</h4>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                    }

                    
                    <div class="mb-4">
                        <h5>Faça uma pergunta</h5>
                        <form asp-controller="Perguntas" asp-action="Create" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="aulaId" value="@Model.Id" />
                            <div class="form-group mb-2">
                                <textarea name="conteudo" class="form-control" rows="3" placeholder="Digite sua pergunta aqui..."></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary"><i class="fas fa-paper-plane me-2"></i>Enviar Pergunta</button>
                        </form>
                    </div>

                    <hr />

                    
                    @if (Model.Perguntas != null && Model.Perguntas.Any())
                    {
                        foreach (var pergunta in Model.Perguntas)
                        {
                            <div class="mb-4">
                                <div class="d-flex">
                                    <div class="flex-shrink-0"><i class="fas fa-user-circle fa-2x text-muted"></i></div>
                                    <div class="ms-3 flex-grow-1">
                                        <div class="fw-bold">
                                            @(pergunta.Usuario?.Nome ?? "Usuário Removido") 
                                            <small class="text-muted fw-normal">em @pergunta.Data.ToString("dd/MM/yyyy HH:mm")</small>
                                        </div>
                                        <p>@pergunta.Conteudo</p>

                                        
                                        @foreach (var resposta in pergunta.Respostas)
                                        {
                                            <div class="d-flex mt-3">
                                                <div class="flex-shrink-0"><i class="fas fa-user-circle fa-lg text-muted"></i></div>
                                                <div class="ms-3">
                                                    <div class="fw-bold">
                                                        @(resposta.Usuario?.Nome ?? "Usuário Removido") 
                                                        <small class="text-muted fw-normal">em @resposta.Data.ToString("dd/MM/yyyy HH:mm")</small>
                                                    </div>
                                                    <p>@resposta.Conteudo</p>
                                                </div>
                                            </div>
                                        }

                                        
                                        <form asp-controller="Respostas" asp-action="Create" method="post" class="mt-3">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="perguntaId" value="@pergunta.Id" />
                                            <input type="hidden" name="aulaId" value="@Model.Id" />
                                            <div class="input-group">
                                                <input type="text" name="conteudo" class="form-control" placeholder="Adicione uma resposta...">
                                                <button type="submit" class="btn btn-sm btn-outline-secondary">Responder</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <hr />
                        }
                    }
                    else
                    {
                        <p class="text-center text-muted">Ainda não há perguntas para esta aula. Seja o primeiro a perguntar!</p>
                    }
                </div>
            </div>
            </div> @if (menuAulas != null && menuAulas.Count > 0)
        {
            <div class="col-lg-3 col-md-4">
                <div class="card shadow-sm mb-4" style="position: sticky; top: 20px;">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Aulas do Curso</h5>
                    </div>
                    <div class="list-group list-group-flush" style="max-height: 80vh; overflow-y: auto;">
                        @foreach (var itemAula in menuAulas)
                        {
                            var activeClass = (itemAula.Id == Model.Id) ? "active" : "";
                            
                            <a asp-action="Details" asp-route-id="@itemAula.Id" 
                               class="list-group-item list-group-item-action @activeClass">
                                
                                <i class="bi bi-play-circle-fill me-2"></i>
                                @itemAula.Titulo
                            </a>
                        }
                    </div>
                </div>
            </div>
        }

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
}