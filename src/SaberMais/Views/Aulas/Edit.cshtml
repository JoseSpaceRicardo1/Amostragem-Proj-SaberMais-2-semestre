@model SaberMais.Models.Aula

@{
    ViewData["Title"] = "Editar Aula";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-8">
            <div class="card shadow-lg border-primary">
                <div class="card-header bg-primary text-white">
                    <h1 class="h3 mb-0">Editar Aula: @Model.Titulo</h1>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CursoId" />

                        <div class="form-group mb-3">
                            <label asp-for="Titulo" class="form-label"></label>
                            <input asp-for="Titulo" class="form-control" />
                            <span asp-validation-for="Titulo" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Descricao" class="form-label"></label>
                            <textarea asp-for="Descricao" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Duracao" class="form-label">Duração (Em minutos)</label>
                                    <input asp-for="Duracao" type="number" class="form-control" />
                                    <span asp-validation-for="Duracao" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Status" class="form-label"></label>
                                    <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<SaberMais.Models.Status>()"></select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <h5 class="mt-4">Arquivo da Aula</h5>
                            @if (!string.IsNullOrEmpty(Model.CaminhoArquivo))
                            {
                                <div class="mb-3 p-3 bg-light rounded border">
                                    <p><strong>Arquivo Atual:</strong> @Model.NomeArquivo</p>
                                    @if (Model.TipoArquivo != null && Model.TipoArquivo.StartsWith("video/"))
                                    {
                                        <video controls style="width: 100%; max-height: 240px;" preload="metadata">
                                            <source src="@Url.Content(Model.CaminhoArquivo)" type="@Model.TipoArquivo">
                                        </video>
                                    }
                                    else
                                    {
                                        <p><a href="@Url.Content(Model.CaminhoArquivo)" download="@Model.NomeArquivo">Baixar arquivo atual</a></p>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">Nenhum arquivo enviado para esta aula.</p>
                            }
                            <label class="form-label">Carregar Novo Arquivo (Opcional)</label>
                            <input type="file" name="arquivo" class="form-control" />
                            <small class="form-text text-muted">Selecione um novo arquivo para substituí-lo. Deixe em branco para manter o atual.</small>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Salvar" class="btn btn-primary btn-lg w-100" />
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3 text-center">
                <a asp-action="Index" asp-route-cursoId="@Model.CursoId" class="btn btn-link text-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar para a Lista de Aulas
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}