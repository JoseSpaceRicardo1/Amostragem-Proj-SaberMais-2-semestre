@model IEnumerable<SaberMais.Models.Aula>

@{
    ViewData["Title"] = "Aulas do Curso";
    bool isCreator = (ViewData["IsCreator"] as bool?) ?? false;
}

<div class="container-fluid px-3 px-md-4 py-3">
    <h1 class="h3 h4-md mb-3 mb-md-4">Aulas do Curso: @ViewData["NomeCurso"]</h1>

    @if (isCreator)
    {
        <div class="mb-3 mb-md-4">
            <a asp-action="Create" asp-route-cursoId="@ViewData["CursoId"]" class="btn btn-success btn-sm w-100 w-md-auto">
                <i class="bi bi-plus-circle"></i> Criar Nova Aula
            </a>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <!-- Versão Desktop/Tablet: Tabela -->
        <div class="table-responsive d-none d-md-block">
            <table class="table table-striped table-hover table-sm">
                <thead class="table-dark">
                    <tr>
                        <th class="text-center" style="width: 200px;">Ações</th>
                        <th>@Html.DisplayNameFor(model => model.Titulo)</th>
                        <th class="d-none d-lg-table-cell">Duração (min)</th>
                        @if (isCreator)
                        {
                            <th class="d-none d-xl-table-cell">@Html.DisplayNameFor(model => model.Status)</th>
                            <th class="d-none d-xl-table-cell">@Html.DisplayNameFor(model => model.NomeArquivo)</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center" style="white-space: nowrap;">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" title="Detalhes">
                                        <i class="bi bi-eye"></i> Detalhes
                                    </a>
                                    @if (isCreator)
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" title="Editar">
                                            <i class="bi bi-pencil"></i> Editar
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" title="Deletar">
                                            <i class="bi bi-trash"></i> Deletar
                                        </a>
                                    }
                                </div>
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                            <td class="d-none d-lg-table-cell">@Html.DisplayFor(modelItem => item.Duracao) min</td>
                            @if (isCreator)
                            {
                                <td class="d-none d-xl-table-cell">
                                    <span class="badge bg-info">@Html.DisplayFor(modelItem => item.Status)</span>
                                </td>
                                <td class="d-none d-xl-table-cell">
                                    <small>@Html.DisplayFor(modelItem => item.NomeArquivo)</small>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Versão Mobile: Cards -->
        <div class="d-md-none">
            @foreach (var item in Model)
            {
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-2">@Html.DisplayFor(modelItem => item.Titulo)</h5>
                        
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted small">
                                    <i class="bi bi-clock"></i> Duração:
                                </span>
                                <strong>@Html.DisplayFor(modelItem => item.Duracao) min</strong>
                            </div>
                            
                            @if (isCreator)
                            {
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-muted small">
                                        <i class="bi bi-info-circle"></i> Status:
                                    </span>
                                    <span class="badge bg-info">@Html.DisplayFor(modelItem => item.Status)</span>
                                </div>
                                
                                @if (!string.IsNullOrEmpty(item.NomeArquivo))
                                {
                                    <div class="mb-2">
                                        <span class="text-muted small">
                                            <i class="bi bi-file-earmark"></i> Arquivo:
                                        </span>
                                        <div class="small text-break">@Html.DisplayFor(modelItem => item.NomeArquivo)</div>
                                    </div>
                                }
                            }
                        </div>

                        <div class="d-grid gap-2">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i> Ver Detalhes
                            </a>
                            
                            @if (isCreator)
                            {
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                        <i class="bi bi-trash"></i> Deletar
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Nenhuma aula cadastrada para este curso.
        </div>
    }

    <div class="mt-3 mt-md-4">
        <a asp-controller="Cursos" asp-action="Details" asp-route-id="@ViewData["CursoId"]" class="btn btn-outline-secondary btn-sm w-100 w-md-auto">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}