@model SaberMais.Models.Curso

@{
    ViewData["Title"] = "Deletar Curso: " + Model.Titulo;
}

<div class="container mt-4">
    <div class="row justify-content-center">

        <div class="col-lg-7 col-md-8">

            <div class="card shadow-lg border-danger">

                <div class="card-header bg-danger text-white">
                    <h1 class="h3 mb-0"><i class="bi bi-exclamation-triangle-fill"></i> CONFIRMAR EXCLUSÃO</h1>
                </div>

                <div class="card-body">

                    <h3 class="text-danger mb-4">Tem certeza que deseja DELETAR este curso?</h3>

                    <div class="alert alert-light border p-3">
                        <h4 class="alert-heading">@Html.DisplayFor(model => model.Titulo)</h4>

                        <dl class="row mb-0">
                            <dt class="col-sm-3">Duração:</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Duracao) Horas</dd>
                                <dt class="col-sm-3">Status:</dt>
                                <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>
                        </dl>

                        <hr class="my-3">

                        <p class="mb-0 small text-muted">
                            Descrição: @Html.DisplayFor(model => model.Descricao)
                        </p>
                    </div>
                </div>

                <div class="card-footer d-flex justify-content-between">

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="bi bi-trash-fill"></i>Deletar</button>
                    </form>

                    <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}