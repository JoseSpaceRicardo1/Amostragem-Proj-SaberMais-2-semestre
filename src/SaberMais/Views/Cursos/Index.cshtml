@model IEnumerable<SaberMais.Models.Curso>

@{
    ViewData["Title"] = "Cursos Populares";

    const int LIMITE_CARACTERES = 150;
}

<h1 class="mb-4">Cursos Mais Populares</h1>

<div class="row">
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            string descricaoCompleta = item.Descricao;
            string descricaoCurta = descricaoCompleta;

            if (descricaoCompleta.Length > LIMITE_CARACTERES)
            {
                descricaoCurta = descricaoCompleta.Substring(0, LIMITE_CARACTERES) + " [ ... ]";
            }

            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm border-primary">

                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">@Html.DisplayFor(modelItem => item.Titulo)</h5>
                    </div>

                    <div class="card-body d-flex flex-column">

                        <p class="card-text flex-grow-1 text-muted">
                            @descricaoCurta
                        </p>

                        <div class="mt-auto pt-2 border-top">

                            <p class="card-subtitle text-dark mb-2 fw-bold">
                                <i class="bi bi-people-fill"></i>
                                Inscritos: @Html.DisplayFor(modelItem => item.QtdInscritos)
                            </p>

                            <p class="card-subtitle text-muted mb-2">
                                <i class="bi bi-clock"></i>
                                Duração: @Html.DisplayFor(modelItem => item.Duracao) Horas (Aproximadamente)
                            </p>
                        </div>
                    </div>

                    <div class="card-footer text-end">
                        <a asp-action="Details" asp-route-id="@item.Id" asp-route-origem="index" class="btn btn-primary btn-sm">
                            <i class="bi bi-book"></i> Visualizar Curso
                        </a>
                    </div>

                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info text-center" role="alert">
                Nenhum curso popular disponível para exibição.
            </div>
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}