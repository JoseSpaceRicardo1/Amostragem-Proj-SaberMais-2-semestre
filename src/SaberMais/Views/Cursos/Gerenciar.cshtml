@model X.PagedList.IPagedList<SaberMais.Models.Curso>
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "Gerenciar";

    const int LIMITE_CARACTERES = 120;
}

<h1 class="mb-4">Gerenciar Cursos</h1>

<div class="row mb-4">
    <div class="col-md-6">
        <form method="get" action="@Url.Action("Gerenciar")" id="searchForm">
            <input type="text" id="searchInput" name="termo" value="@ViewBag.Termo" class="form-control form-control-lg" placeholder="Pesquisar por Título ou Descrição...">
        </form>
    </div>
</div>

<p class="mb-4">
    <a asp-action="Create" class="btn btn-outline-primary btn-lg shadow-sm">
        <i class="bi bi-plus-circle"></i> Criar Novo Curso
    </a>
</p>

<div class="row">
    @if (Model != null && Model.Any())
    {
        @foreach (var item in Model)
        {
            string descricaoCompleta = item.Descricao;
            string descricaoCurta = descricaoCompleta;

            if (descricaoCompleta != null && descricaoCompleta.Length > LIMITE_CARACTERES)
            {
                descricaoCurta = descricaoCompleta.Substring(0, LIMITE_CARACTERES) + " [ ... ]";
            }

            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm border-primary">
                    <div class="card-header bg-white text-dark d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-bold">@Html.DisplayFor(modelItem => item.Titulo)</h5>
                        <span class="badge @(item.Status == SaberMais.Models.Status.Ativo ? "bg-info" : "bg-secondary")">@Html.DisplayFor(modelItem => item.Status)</span>
                    </div>

                    <div class="card-body d-flex flex-column fw-bold">
                        <p class="card-text flex-grow-1 text-dark fw-normal">
                            @descricaoCurta
                        </p>
                        <div class="mt-auto pt-2 border-top">
                            <p class="card-subtitle text-dark-emphasis mb-2">
                                <i class="bi bi-clock"></i>
                                Duração: @Html.DisplayFor(modelItem => item.Duracao) Horas (Aproximadamente)
                            </p>
                        </div>
                    </div>

                    <div class="card-footer d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" asp-route-origem="gerenciar" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-eye"></i> Detalhes
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i> Deletar
                        </a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-warning text-center" role="alert">
                @if (!string.IsNullOrEmpty(ViewBag.Termo?.ToString()))
                {
                    <text>Nenhum curso encontrado para o termo "@ViewBag.Termo".</text>
                }
                else
                {
                    <text>Nenhum curso encontrado. Use o botão acima para criar um novo.</text>
                }
            </div>
        </div>
    }
    </div>

@if (Model != null && Model.PageCount > 1)
{
    <div class="row mt-4">
        <div class="col-12 d-flex justify-content-center">
            @Html.PagedListPager(Model, page => Url.Action("Gerenciar", new { page, termo = ViewBag.Termo }),
            new X.PagedList.Mvc.Core.PagedListRenderOptions
            {
                LiElementClasses = new[] { "page-item" },
                PageClasses = new[] { "page-link" },
                DisplayEllipsesWhenNotShowingAllPageNumbers = true,
                DisplayLinkToFirstPage = X.PagedList.Mvc.Core.PagedListDisplayMode.Never,
                DisplayLinkToLastPage = X.PagedList.Mvc.Core.PagedListDisplayMode.Never,
                DisplayLinkToPreviousPage = X.PagedList.Mvc.Core.PagedListDisplayMode.Always,
                DisplayLinkToNextPage = X.PagedList.Mvc.Core.PagedListDisplayMode.Always,
                ContainerDivClasses = new[] { "pagination-container" }
            })
    </div>
</div>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <script>
        const input = document.getElementById("searchInput");
        const searchForm = document.getElementById("searchForm");
        let timeout = null;

        input.addEventListener("keyup", () => {
            clearTimeout(timeout);
            timeout = setTimeout(() => {
                searchForm.submit();
            }, 300);
        });

        input.addEventListener("keypress", (e) => {
            if (e.key === "Enter") {
                e.preventDefault();
                clearTimeout(timeout);
                searchForm.submit();
            }
        });
    </script>
}